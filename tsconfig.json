{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/"
  }
}
